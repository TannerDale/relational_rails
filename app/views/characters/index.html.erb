<h1>Characters</h1>

<ul>
<% @characters.each do |character| %>
  <li>Name: <%= character.name %> <%= link_to 'Edit Character', "/characters/#{character.id}/edit" %></li>
  <li>Game: <%= character.video_game.name %></li>
  <li>Age: <%= character.age %></li>
  <li>Human?: <%= character.human %></li>
<% end %>
</ul>
