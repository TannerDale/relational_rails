<h1>Edit <%= @library.name %></h1>

<%= form_with url: "/libraries/#{@library.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @library.name %>
  <%= f.label :employees %>
  <%= f.number_field :employees, value: @library.employees %>
  <%= f.label :open_weekends %>
  <%= f.check_box :open_weekends, value: @library.open_weekends %>
  <%= f.submit 'Update' %>
<% end %>
